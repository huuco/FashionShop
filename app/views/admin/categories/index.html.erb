<% provide :title, t("admin.list") %>
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= t "admin.category" %>
          <small><%= t "admin.list" %></small>
        </h1>
      </div>
      <div class="action_btn row col-lg-12">
        <%= link_to t(".add_new"), new_admin_category_url,
          class: "btn btn-default" %>
      </div>
      <table class="table table-striped table-bordered table-hover"
         id="dataTables-example">
        <thead>
          <tr align="center">
            <th><%= t "admin.categories.index.id" %></th>
            <th><%= t "admin.categories.index.name" %></th>
            <th><%= t "admin.categories.index.description" %></th>
            <th><%= t "admin.categories.index.active" %></th>
            <th><%= t "admin.categories.index.parent_id" %></th>
            <th><%= t "admin.edit" %></th>
            <th><%= t "admin.delete" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "category", collection: @categories, as: :category %>
        </tbody>
      </table>
      <%= paginate @categories %>
    </div>
  </div>
</div>

<% provide :title, t(".title") %>
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= t ".title" %>
          <small><%= t ".list" %></small>
        </h1>
      </div>
      <div class="action_btn row col-lg-12">
        <%= link_to t(".add_new"), new_admin_address_url,
          class: "btn btn-default" %>
      </div>
      <table class="table table-striped table-bordered table-hover"
         id="dataTables-example">
        <thead>
          <tr align="center">
            <th><%= t ".id" %></th>
            <th><%= t ".alias" %></th>
            <th><%= t ".full_name" %></th>
            <th><%= t ".edit" %></th>
            <th><%= t ".delete" %></th>
          </tr>
        </thead>
        <tbody>
         <%= render partial: "address", colllection: @addresses, as: :address %>
        </tbody>
      </table>
      <%= paginate @addresses %>
    </div>
  </div>
</div>

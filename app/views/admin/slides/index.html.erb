<% provide :title, t("admin.list") %>
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= t "admin.slide" %>
          <small><%= t "admin.list" %></small>
        </h1>
      </div>
      <div class="action_btn row col-lg-12">
        <%= link_to t(".add_new"), new_admin_slide_url,
          class: "btn btn-default" %>
      </div>
      <table class="table table-striped table-bordered table-hover"
         id="dataTables-example">
        <thead>
          <tr align="center">
            <th><%= t "admin.slides.id" %></th>
            <th><%= t "admin.slides.title" %></th>
            <th><%= t "admin.slides.image" %></th>
            <th><%= t "admin.slides.link" %></th>
            <th><%= t "admin.edit" %></th>
            <th><%= t "admin.delete" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "slide", collection: @slides, as: :slide %>
        </tbody>
      </table>
      <%= paginate @slides %>
    </div>
  </div>
</div>

<div class="nested-fields">
  <div>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache, value: f.object.image_cache %>
  </div>
  <div class="thumb">
    <% if f.object.image.url.present? %>
      <%= image_tag f.object.image.url %>
    <% end %>
  </div>
  <div>
    <%= link_to_remove_association t(".remove"), f %>
  </div>
</div>

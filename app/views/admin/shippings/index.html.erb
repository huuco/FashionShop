<% provide :title, t(".title") %>
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= t ".title" %>
          <small><%= t ".list" %></small>
        </h1>
      </div>
      <div class="action_btn row col-lg-12">
        <%= link_to t(".add_new"), new_admin_shipping_url,
          class: "btn btn-default" %>
      </div>
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr class="center">
            <th><%= t ".id" %></th>
            <th><%= t ".name" %></th>
            <th><%= t ".description" %></th>
            <th><%= t ".price" %></th>
            <th><%= t ".edit" %></th>
            <th><%= t ".delete" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "admin/shippings/list", collection: @shippings,
           as: :shipping %>
        </tbody>
      </table>
      <% if @shippings %>
        <%= paginate @shippings %>
      <% end %>
    </div>
  </div>
</div>

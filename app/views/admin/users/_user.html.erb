<tr class="odd gradeX center">
  <td><%= index_for_list @users, user_counter %></td>
  <td><%= user.full_name %></td>
  <td><%= user.username %></td>
  <td><%= user.email %></td>
  <td><%= user.role %></td>
  <td>
    <%= form_for [:admin, user] do |f| %>
      <%= f.check_box :activated, data: {remote: true, method: :patch,
       url: admin_user_path(user)} %>
    <% end %>
  </td>
  <td class="center">
    <i class="fa fa-pencil fa-fw"></i>
    <%= link_to t("admin.edit"), edit_admin_user_path(user) %>
  </td>
  <td class="center">
      <i class="fa fa-trash-o fa-fw"></i>
      <%= link_to t(".delete"), admin_user_path(user),
        method: :delete, data: {confirm: t(".you_sure")} %>
  </td>
</tr>

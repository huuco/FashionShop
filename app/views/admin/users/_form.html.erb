<%= form_for [:admin, @user] do |f| %>
  <%= render "layouts/admin/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.label :full_name, t("admin.users.edit.full_name") %>
    <%= f.text_field :full_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :username, t("admin.users.edit.user_name") %>
    <%= f.text_field :username, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email, t("admin.users.index.email") %>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password, t("admin.users.edit.password") %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, t("admin.users.index.password_confirmation") %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>
   <div class="form-group">
      <%= f.label :role %><br />
      <%= f.select :role, User.roles.keys, {}, class: "user-roles-select form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :active, class: "checkbox inline" do %>
    <%= f.check_box :active %><%= t "admin.users.active" %>
    <% end %>
  </div>
  <%= f.button t("admin.save"), type: :submit, class: "btn btn-default" %>
  <%= f.button t("admin.reset"), type: :reset, class: "btn btn-default" %>
<% end %>

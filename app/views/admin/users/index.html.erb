<% provide :title, t("admin.user") %>
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= t "admin.category" %>
          <small><%= t "admin.list" %></small>
        </h1>
      </div>
       <div class="action_btn row col-lg-12">
        <%= link_to t(".add_new"), new_admin_user_url,
          class: "btn btn-default" %>
      </div>
      <table class="table table-striped table-bordered table-hover"
         id="dataTables-example">
        <thead>
          <tr align="center">
            <th><%= t "admin.users.index.id" %></th>
            <th><%= t "admin.users.index.name" %></th>
            <th><%= t "admin.users.index.full_name" %></th>
            <th><%= t "admin.users.index.email" %></th>
            <th><%= t "admin.users.index.role" %></th>
            <th><%= t "admin.users.index.active" %></th>
            <th><%= t "admin.edit" %></th>
            <th><%= t "admin.delete" %></th>
          </tr>
        </thead>
        <tbody>
           <%= render partial: "user", collection: @users, as: :user%>
        </tbody>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>

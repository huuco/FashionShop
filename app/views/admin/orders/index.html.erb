<% provide :title, t(".title") %>
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= t ".title" %>
          <small><%= t ".list" %></small>
        </h1>
      </div>
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr class="center">
            <th><%= t ".id" %></th>
            <th><%= t ".transaction_id" %></th>
            <th><%= t ".email" %></th>
            <th><%= t ".total" %></th>
            <th><%= t ".status" %></th>
            <th><%= t ".payment" %></th>
            <th><%= t ".detail" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "admin/orders/list", collection: @orders,
            as: :order %>
        </tbody>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>

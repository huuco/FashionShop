<%= form_for @address do |f| %>
  <%= render "layouts/error_messages", object: f.object %>
  <% if @address.new_record? %>
  <div class="form-group">
    <%= f.label :alias, t(".alias") %>
    <%= f.text_field :alias, class: "form-control" %>
  </div>
  <% end %>
  <div class="form-group">
    <%= f.label :full_name, t(".full_name") %>
    <%= f.text_field :full_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :post_code, t(".post_code") %>
    <%= f.text_field :post_code, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :city, t(".city") %>
    <%= f.text_field :city, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :country, t(".country") %>
    <%= f.text_field :country, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :phone, t(".phone") %>
    <%= f.text_field :phone, class: "form-control" %>
  </div>
  <%= f.button t(".btn_save"), type: :submit, class: "btn btn-default" %>
  <%= f.button t(".btn_reset"), type: :reset, class: "btn btn-default" %>
<% end %>

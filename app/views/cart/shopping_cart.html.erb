
  <div class="container">
    <div id="content">

      <div class="table-responsive">
        <!-- Shop Products Table -->
        <table class="shop_table beta-shopping-cart-table" cellspacing="0">
          <thead>
            <tr>
              <th class="product-name">Product</th>
              <th class="product-price">Price</th>
              <th class="product-status">Status</th>
              <th class="product-quantity">Qty.</th>
              <th class="product-subtotal">Total</th>
              <th class="product-remove">Remove</th>
            </tr>
          </thead>
          <tbody>

            <tr class="cart_item">
              <td class="product-name">
                <div class="media">
                  <img class="pull-left" src="assets/dest/images/shoping1.jpg" alt="">
                  <div class="media-body">
                    <p class="font-large table-title">Menâ€™s Belt</p>
                    <p class="table-option">Color: Red</p>
                    <p class="table-option">Size: M</p>
                    <a class="table-edit" href="#"><%= t "edit" %></a>
                  </div>
                </div>
              </td>

              <td class="product-price">
                <span class="amount">$235.00</span>
              </td>

              <td class="product-status">
                <%= t "in_stock" %>
              </td>

              <td class="product-quantity">
                <select name="product-qty" id="product-qty">
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                </select>
              </td>

              <td class="product-subtotal">
                <span class="amount">$235.00</span>
              </td>

              <td class="product-remove">
                <a href="#" class="remove" title="<%= t "remove_this_item" %>"><i class="fa fa-trash-o"></i></a>
              </td>
            </tr>
            </tr>
          </tbody>

          <tfoot>
            <tr>
              <td colspan="6" class="actions">

                <div class="coupon">
                  <label for="coupon_code"><%= t "coupon" %></label>
                  <input type="text" name="coupon_code" value="" placeholder="Coupon code">
                  <button type="submit" class="beta-btn primary" name="apply_coupon"><%= t "apply" %> <%= t "coupon" %> <i class="fa fa-chevron-right"></i></button>
                </div>

                <button type="submit" class="beta-btn primary" name="update_cart"><%= t "update_cart" %> <i class="fa fa-chevron-right"></i></button>
                <button type="submit" class="beta-btn primary" name="proceed"><%= link_to ("Process to Checkout"), checkout_path %><i class="fa fa-chevron-right"></i></button>
              </td>
            </tr>
          </tfoot>
        </table>
        <!-- End of Shop Table Products -->
      </div>


      <!-- Cart Collaterals -->
      <div class="cart-collaterals">


        <div class="cart-totals pull-right">
          <div class="cart-totals-row"><h5 class="cart-total-title"><%= t "cart_totals" %></h5></div>
          <div class="cart-totals-row"><span><%= t "cart_totals" %></span> <span>$188.00</span></div>
          <div class="cart-totals-row"><span><%= t "shipping" %></span> <span><%= t "free_shipping" %></span></div>
          <div class="cart-totals-row"><span><%= t "order_total" %></span> <span>$188.00</span></div>
        </div>

        <div class="clearfix"></div>
      </div>
      <!-- End of Cart Collaterals -->
      <div class="clearfix"></div>

    </div> <!-- #content -->
  </div> <!-- .container -->

<div class="col-sm-3">
  <div class="single-item">
    <div class="single-item-header">
    <% if product.images.present? %>
      <%# byebug %>
      <%#= link_to image_tag(Settings.URL_IMAGE+product.images.first.image.url),
        product_path(product) %>
              <%= image_tag product.images.first.image.url.to_s %>
    <% end %>
    </div>
    <div class="single-item-body">
      <p class="single-item-title"><%= product.name %></p>
      <p class="single-item-price">
        <span class="flash-del">$ <%= product.price %></span>
        <span class="flash-sale">$ <%= product.promotion_price %></span>
      </p>
    </div>
    <div class="single-item-caption">
      <%= link_to add_to_cart_path(product),
        remote: true, method: :post, class: "add-to-cart pull-left" do %>
        <i class="fa fa-shopping-cart"></i>
      <% end %>
      <%= link_to t("products.details"), product_path(product),
        class: "beta-btn primary" %>
      <i class="fa fa-chevron-right"></i>
      <div class="clearfix"></div>
    </div>
  </div>
</div>

